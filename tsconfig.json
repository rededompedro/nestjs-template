{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "target": "es2017",
    "allowJs": true,
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "strict": true,
    "lib": ["ESNext"],
    "typeRoots": [
      "./typings",
      "./node_modules/@types"
    ]
  },
  "include": ["./src/**/*", "./typings", "./test/**/*"],
  "files": ["commitlint.config.js"],
  "exclude": ["node_modules", "dist"],
}